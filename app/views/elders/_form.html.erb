<%= form_for @elder, :html => { :class => "form-horizont elder" } do |f| %>

    <% if @elder.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@elder.errors.count, "error") %> prohibited this elder from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @elder.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group col-lg-12">
    <%= f.label :people_id, :class => 'control-label' %>
    <div class="controls">
    <%= select("elder", "person_id", Person.all.collect {|p| [p.name, p.name]}, {include_blank: 'Selecione o nome do Ancião'}, {:class => 'form-control'})%>
    </div>
    <%= error_span(@elder[:people_id]) %>
  </div>

  <div class="form-group col-lg-6">
    <%= f.label :designation_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :designation_date, placeholder: 'Data de designação do Ancião', :class => 'form-control datepicker' %>
    </div>
    <%= error_span(@elder[:designation_date]) %>
  </div>
  <div class="form-group col-lg-6">
    <%= f.label :removal_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :removal_date, placeholder: 'Data de remoção do Ancião', :class => 'form-control datepicker' %>
    </div>
    <%= error_span(@elder[:removal_date]) %>
  </div>
  <br/>
  <br/>
  <div class="control-group col-lg-5">
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            elders_path, :class => 'btn btn-warning' %>
  </div>

<% end %>
