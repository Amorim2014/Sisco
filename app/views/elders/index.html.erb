<%- model_class = Elder -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped table-bordered table-hover table-condensed">

  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:people_id) %></th>
      <th><%= model_class.human_attribute_name(:designation_date) %></th>
      <th><%= model_class.human_attribute_name(:removal_date) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @elders.each do |elder| %>
      <tr>
        <td><%= link_to elder.id, elder_path(elder) %></td>
        <td><%= elder.designation_date %></td>
        <td><%= elder.removal_date %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_elder_path(elder), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      elder_path(elder),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_elder_path,
            :class => 'btn btn-primary' %>
