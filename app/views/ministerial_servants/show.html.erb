<%- model_class = MinisterialServant -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:person_id) %>:</strong></dt>
  <dd><%= @ministerial_servant.person_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:designation_date) %>:</strong></dt>
  <dd><%= @ministerial_servant.designation_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:removal_date) %>:</strong></dt>
  <dd><%= @ministerial_servant.removal_date %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              ministerial_servants_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_ministerial_servant_path(@ministerial_servant), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              ministerial_servant_path(@ministerial_servant),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
